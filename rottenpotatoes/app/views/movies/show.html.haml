-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

  %li 
    Director:
    - if !@movie.director.nil?
      = @movie.director
    -else 
      = "None"
  

%h3 Description:

%p#description= @movie.description

%p= link_to 'Edit', edit_movie_path(@movie)
%p= link_to 'Find Movies With Same Director', director_path(@movie)
%p= link_to 'Back to movie list', movies_path
%p= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'

